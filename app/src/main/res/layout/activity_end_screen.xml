<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.notexample.coltonquan.colorblock.EndScreen"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/loseText"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginTop="83dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="22sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="NEW HIGHSCORE!"
        android:id="@+id/newHighscoreText"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_above="@+id/scoreText"
        android:layout_centerHorizontal="true"
        android:textSize="22sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/scoreText"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/highScoreText"
        android:layout_below="@+id/scoreText"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:textSize="22sp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="PLAY AGAIN"
        android:id="@+id/playAgainButton"
        android:textColor="#000000"
        android:background="#4cbdbdbd"
        android:onClick="onClick"
        android:layout_above="@+id/adView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="38dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/homeImage"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/home_icon"
        android:onClick="onClickHomeImage"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:srcCompat="@drawable/colorcoin_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/colorcoinImage" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/colorcoinText"
        android:textColor="#000000"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/colorcoinImage"
        android:layout_toStartOf="@+id/colorcoinImage" />

    <TextView
        android:text="+0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/colorcoinImage"
        android:layout_alignRight="@+id/adView"
        android:layout_alignEnd="@+id/adView"
        android:id="@+id/colorcoinAddText"
        android:textSize="18sp"
        android:textColor="#000000" />

    <Button
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible">
    </Button>

</RelativeLayout>
