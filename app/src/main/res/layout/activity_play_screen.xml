<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.notexample.coltonquan.colorblock.PlayScreen"
    android:background="#ffffff">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/home_icon"
        android:onClick="onClickHomeImage"
        android:id="@+id/homeImage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/gameTimerText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        android:textColor="#000000" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridLayout2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <ImageButton
            android:layout_height="100dp"
            app:srcCompat="?android:attr/selectableItemBackgroundBorderless"
            android:id="@+id/topLeft"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_width="90dp"
            android:onClick="onClickTopLeft" />

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="100dp"
            app:srcCompat="?android:attr/selectableItemBackgroundBorderless"
            android:id="@+id/topRight"
            android:onClick="onClickTopRight" />

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="100dp"
            app:srcCompat="?android:attr/selectableItemBackgroundBorderless"
            android:id="@+id/bottomLeft"
            android:layout_row="1"
            android:layout_column="1"
            android:onClick="onClickBottomLeft" />

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="100dp"
            app:srcCompat="?android:attr/selectableItemBackgroundBorderless"
            android:id="@+id/bottomRight"
            android:onClick="onClickBottomRight" />
    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="GAME OVER"
        android:id="@+id/loseText"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="false"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentBottom="false"
        android:layout_centerInParent="true"
        android:onClick="onClickStartGame" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/secondsText"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/counterText"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/masterButton" />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="75dp"
        app:srcCompat="?android:attr/selectableItemBackgroundBorderless"
        android:id="@+id/masterButton"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/gridLayout2"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
