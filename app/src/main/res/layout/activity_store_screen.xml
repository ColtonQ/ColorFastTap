<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_store_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.notexample.coltonquan.colorblock.StoreScreen"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/home_icon"
            android:onClick="onClickHomeImage"
            android:id="@+id/homeImage" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/colorcoin_icon"
            android:id="@+id/imageView2"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/imageView2"
            android:layout_toStartOf="@+id/imageView2"
            android:id="@+id/textView3" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/imageView2"
            android:layout_centerHorizontal="true">

            <TextView
                android:text="Palette"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/paletteText"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:gravity="center_horizontal" />

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@android:drawable/screen_background_dark"
                    android:id="@+id/paletteColor2"
                    android:layout_row="0"
                    android:layout_column="1" />

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@android:drawable/screen_background_dark"
                    android:id="@+id/paletteColor1"
                    android:layout_row="0"
                    android:layout_column="0" />

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@android:drawable/screen_background_dark"
                    android:id="@+id/paletteColor8"
                    android:layout_column="3"
                    android:layout_row="1" />

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@android:drawable/screen_background_dark"
                    android:id="@+id/paletteColor3"
                    android:layout_row="0"
                    android:layout_column="2" />

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@android:drawable/screen_background_dark"
                    android:id="@+id/paletteColor4"
                    android:layout_row="0"
                    android:layout_column="3" />

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@android:drawable/screen_background_dark"
                    android:id="@+id/paletteColor5"
                    android:layout_row="1"
                    android:layout_column="0" />

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@android:drawable/screen_background_dark"
                    android:id="@+id/paletteColor6"
                    android:layout_row="1"
                    android:layout_column="1" />

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@android:drawable/screen_background_dark"
                    android:id="@+id/paletteColor7"
                    android:layout_row="1"
                    android:layout_column="2" />

            </GridLayout>

            <TextView
                android:text="Power Ups"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/powerupsText"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp" />

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@android:drawable/screen_background_dark_transparent"
                    android:id="@+id/powerupColor1" />

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@android:drawable/screen_background_dark_transparent"
                    android:id="@+id/powerupColor2" />

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@android:drawable/screen_background_dark_transparent"
                    android:id="@+id/powerupColor3" />

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@android:drawable/screen_background_dark_transparent"
                    android:id="@+id/powerupColor4" />
            </GridLayout>

            <TextView
                android:text="Palette Check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/palettecheckText"
                android:layout_marginTop="20dp"
                android:textSize="22sp"
                android:textColor="@android:color/black"
                android:gravity="center_horizontal" />

            <TextView
                android:text="Power Ups Check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/powerupsCheckText"
                android:textSize="22sp"
                android:textColor="@android:color/black"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp" />

            <Button
                android:text="APPLY CHANGES"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/applychangesButton"
                android:background="#4cbdbdbd"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:layout_marginTop="20dp" />

            <TextView
                android:text="Color Store"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/colorstoreText"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="40dp"
                android:gravity="center_horizontal" />

            <GridLayout android:layout_height="match_parent"
                android:layout_width="match_parent">

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@android:drawable/screen_background_light"
                    android:id="@+id/imageButton27"
                    android:layout_row="2"
                    android:layout_column="0" />

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@android:drawable/screen_background_light"
                    android:id="@+id/imageButton28" />

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@android:drawable/screen_background_light"
                    android:id="@+id/imageButton29" />

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@android:drawable/screen_background_light"
                    android:id="@+id/imageButton30" />

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@android:drawable/screen_background_light"
                    android:id="@+id/imageButton31"
                    android:layout_row="1"
                    android:layout_column="0" />

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@android:drawable/screen_background_light"
                    android:id="@+id/imageButton32" />

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@android:drawable/screen_background_light"
                    android:id="@+id/imageButton33" />

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@android:drawable/screen_background_light"
                    android:id="@+id/imageButton34" />

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@android:drawable/screen_background_light"
                    android:id="@+id/imageButton35"
                    android:layout_row="3"
                    android:layout_column="0" />

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@android:drawable/screen_background_light"
                    android:id="@+id/imageButton36" />

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@android:drawable/screen_background_light"
                    android:id="@+id/imageButton37" />

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@android:drawable/screen_background_light"
                    android:id="@+id/imageButton38" />

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@android:drawable/screen_background_light"
                    android:id="@+id/imageButton39"
                    android:layout_row="4"
                    android:layout_column="0" />

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@android:drawable/screen_background_light"
                    android:id="@+id/imageButton40" />

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@android:drawable/screen_background_light"
                    android:id="@+id/imageButton41" />

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@android:drawable/screen_background_light"
                    android:id="@+id/imageButton42" />
            </GridLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
